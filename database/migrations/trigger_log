//log products
DELIMITER $$
CREATE TRIGGER log_produk
AFTER UPDATE 
ON products 
FOR FOR EACH ROW
BEGIN
    INSERT INTO log_product
    set nama = old.nama,
    nama_baru = IFNULL(new.nama,old.nama),
    harga = old.harga,
    harga_baru = IFNULL(new.harga,old.harga),
    gambar = old.gambar,
    gambar_baru = IFNULL(new.gambar,old.gambar),
    waktu = NOW();
END$$
DELIMITER ;

//log users

DELIMITER $$
CREATE TRIGGER log_user
AFTER UPDATE 
ON users 
FOR EACH ROW
BEGIN
    INSERT INTO log_user
    set username = old.username,
    username_baru = IFNULL(new.username,old.username),
    password = old.password,
    password_baru = IFNULL(new.password,old.password),
    waktu = NOW();
END$$
DELIMITER ;